<div class="container my-3 mx-auto">
  <div class="col-12 col-md-7 mx-auto">
    <h3>變更支出紀錄</h3>

    <form class="form mt-5" action="/records/{{record._id}}?_method=PUT" method="POST">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">名稱</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" value="{{record.name}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">日期</label>
        <div class="col-sm-10" id="datetimepicker">
          <input class="form-control" name="date" type="date" value="{{record.date}}" required>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">類別</label>
        <div class="col-sm-10">
          <select class="custom-select" name="category" required>
            <option value="" selected disabled hidden>請選擇...</option>
            {{#each category_info}}
            <option value="{{this.name}}" {{#isEqual this.name ../record.category}} selected {{/isEqual}}>{{this.label}}
            </option>
            {{/each}}
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
          <input type="number" min="0" class="form-control" name="cost" value="{{record.cost}}" required>
        </div>
      </div>

      <div class="add-expense d-flex justify-content-center mt-5">
        <button class="btn btn-primary btn-lg" type="submit">確認變更</button>
      </div>
    </form>
  </div>
</div>